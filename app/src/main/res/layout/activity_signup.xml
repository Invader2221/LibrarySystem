<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup_image"
    android:backgroundTintMode="screen"
    tools:context=".Signup">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:alpha="0.4"
        android:background="@drawable/black_blur_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/reg_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/input_design"
                    android:hint="User Name"
                    android:inputType="textPersonName"
                    android:padding="20dp"
                    android:textColor="@android:color/background_light"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="20dp" />


                <EditText
                    android:id="@+id/reg_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/username"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/input_design"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:padding="20dp"
                    android:textColor="@android:color/background_light"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/email"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/input_design"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/registerTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/login_btn"
                        android:layout_centerHorizontal="true"
                        android:text="Select Your Role:"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="20dp" />


                    <RadioGroup
                        android:id="@+id/radioGroup_role"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/reg_role_student"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="Student"
                            android:textColor="@android:color/background_light" />

                        <RadioButton
                            android:id="@+id/reg_role_librarian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Librarian"
                            android:textColor="@android:color/background_light" />

                    </RadioGroup>

                </LinearLayout>


                <EditText
                    android:id="@+id/reg_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/role"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/input_design"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="20dp"
                    android:textColor="@android:color/background_light"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/register_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/register_password_input"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/login_button"
                    android:padding="17dp"
                    android:text="Create Account"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="20dp" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</RelativeLayout>